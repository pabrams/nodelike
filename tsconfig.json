{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext"
  },
  "include": [
    "*.ts",
    "config/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
