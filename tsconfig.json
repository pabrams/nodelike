{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",              // Specify root directory for source files
    "moduleResolution": "Node",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "config"]
}
